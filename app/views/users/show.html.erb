<div class="container mt-4">
    <div class="d-flex justify-content-center">
        <div class="col-4 d-flex justify-content-end mt-2">
            <% if @user.avatar.attached? %>
                <%= image_tag url_for(@user.avatar), :class => "avatar-pic" %>
            <% else %>
                <%= image_tag("/images/no_photo.png", :class => "avatar-pic") %>
            <% end %>
        </div>
        
        <div class="col-4">
            <div class="container d-flex justify-content-start mt-4">
                <h3 class="text-center col-6"><%= @user.username %></h3>
                <% if current_user %>
                    <% if @user.id == current_user.id %>
                        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#edit_profile">Edit profile</button>
                    <% end %>
                <% end %>
            </div>
            <div class="container mt-4">
                <h5 class="ms-5"><%= @user.name %></h5>
                <p class="ms-5"><%= @user.bio %></h2>
            </div>
        </div>
    </div>

    <hr class="mt-5">

    <div class="d-flex justify-content-center">
        <div class="d-flex mt-3 col-8">
            <% if current_user %>
                <% if @user.id == current_user.id %>
                    <h5 class="col-6 text-center bg-light text-secondary text-uppercase"><i class="fas fa-border-all"></i> Publications</h5> |
                    <h5 class="col-6 text-center bg-light text-secondary text-uppercase"><i class="far fa-bookmark"></i> Saved</h5>
                <% else %>
                    <h5 class="col-12 text-center bg-light text-secondary text-uppercase"><i class="fas fa-border-all"></i> Publications</h5>
                <% end %>
            <% end %>
        </div>
    </div>
        
    <div class="d-flex justify-content-center col-12">
        <div class="row">
            <% @images.each do |image| %>
                <div class="col-4">
                    <%#= image_tag(image.image, :class => "image-user") %>
                    <%= link_to image_tag(image.image, class: "image-user"), image_path(image.id) %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<!-- Modal -->
<%= render "users/edit" %>
