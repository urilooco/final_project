<div class="container mt-4">
    <div class="d-flex justify-content-center">
        <div class="col-4 d-flex justify-content-end mt-2">
            <%= image_tag(@user_presenter.profile_image, :class => "avatar-pic") %>
        </div>
        
        <div class="col-4">
            <div class="container d-flex justify-content-start mt-4">
                <h3 class="text-center col-6"><%= @user.username %></h3>
                <% if current_user %>
                    <% if @user.id == current_user.id %>
                        <button class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#edit_profile">Edit profile</button>
                    <% end %>
                <% end %>
            </div>
            <div class="container mt-4">
                <h5 class="ms-5"><%= @user.name %></h5>
                <p class="ms-5"><%= @user.bio %></h2>
            </div>
        </div>
    </div>

    <hr class="mt-5">

    <div class="d-flex justify-content-center">
        <div class="d-flex mt-1 col-8">
            <div class="col-12 d-flex justify-content-center">
                <h5 class="col-12 text-center bg-light text-secondary text-uppercase py-1"><i class="fas fa-border-all"></i> Posts</h5>
             </div>
        </div>
    </div>
        
    <div class="d-flex justify-content-center col-12">
        <div class="row">
            <% @images.each do |image| %>
                <div class="col-4">
                    <%= link_to image_tag(image.image, class: "image-user"), image_path(image.id) %>
                </div>
            <% end %>
        </div>
    </div>
</div>

<!-- Modal -->
<%= render "users/edit" %>
