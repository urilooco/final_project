<div class="container">
  <div class="text-center my-4">
    <h2>Log in</h2>
    <h5>üêâ</h5>
  </div>

  <hr class="container justify-content-center col-4">

  <div class="col-3 container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <div class="form-group">
        <%= f.label :email, class:"form-label" %><br />
        <%= f.email_field :email, autofocus: true, class:"form-control mb-2" %>
      </div>

      <div class="form-group">
        <%= f.label :password, class:"form-label" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class:"form-control mb-2" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class:"form-label" %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in", class:"btn btn-primary col-12" %>
      </div>
    <% end %>
  </div>

  <hr class="container justify-content-center col-4">

  <div class="text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>
